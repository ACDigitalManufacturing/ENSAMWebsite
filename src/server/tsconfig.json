{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": "src",

    // "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "pretty": true,

    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
